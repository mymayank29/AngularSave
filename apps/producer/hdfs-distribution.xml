<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>hdfs-distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <baseDirectory>/</baseDirectory>
    <files>
        <file>
            <source>${basedir}/target/${project.artifactId}-${version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>${artifactName}.jar</destName>
        </file>
        <file>
            <source>${basedir}/shell/spark-submit.sh</source>
            <outputDirectory>shell</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/shell/spark-submit_ocr_contracts.sh</source>
            <outputDirectory>shell</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/shell/spark-submit_anomally_price.sh</source>
            <outputDirectory>shell</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/lib/sqljdbc4.jar</source>
            <outputDirectory>lib</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>oozie</directory>
            <outputDirectory>oozie</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>hive</directory>
            <outputDirectory>hive</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>.</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>cvx.udap.common:reporter:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>.</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>*/find-target-raw-data-directory.sh</include>
                    <include>*/retention.sh</include>
                    <include>*/impala-refresh-all-tables.sh</include>
                </includes>
            </unpackOptions>
            <includes>
                <include>cvx.udap.common:common-shell:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>text-scraping-ocr-parser-jar.jar</outputFileNameMapping>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
                <include>cvx.udap.common:text-scraping-ocr-parser-jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>