<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>hdfs-distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${basedir}/target/${project.artifactId}-${version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>${artifactName}.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>oozie</directory>
            <outputDirectory>oozie</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>shell</directory>
            <outputDirectory>shell</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>sql</directory>
            <outputDirectory>sql</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>.</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>cvx.udap.common:reporter:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>.</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>*/retention.sh</include>
                    <include>*/impala-refresh-all-tables.sh</include>
                </includes>
            </unpackOptions>
            <includes>
                <include>cvx.udap.common:common-shell:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>